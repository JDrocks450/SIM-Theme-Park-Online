<Page x:Class="TPWSE.ClientApplication.Pages.ParksControl.ParksSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TPWSE.ClientApplication.Pages.ParksControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ParksSearchPage" Foreground="White">

    <Grid>
        <ContentControl Style="{StaticResource BubbleUXContentElement}" Margin="10" VerticalAlignment="Top" Padding="15">
            <StackPanel>
                <TextBlock FontWeight="Bold">Search by Username: </TextBlock>
                <TextBlock TextWrapping="Wrap">SIM Theme Park Online allows you to find parks created by a specific person, input a username to get started.</TextBlock>
                <Separator Margin="0,10"/>
                <TextBox x:Name="SearchBox" Background="#FF373737" Height="30" VerticalContentAlignment="Center" KeyDown="SearchBox_KeyDown"></TextBox>
            </StackPanel>
        </ContentControl>
    </Grid>
</Page>
